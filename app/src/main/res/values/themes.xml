<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ExpensesControl" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="ThemeOverlay.ExpensesControl.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/backgroundColor</item>
        <item name="appWidgetTextColor">@color/primaryTextColor</item>
        <item name="topBarBackgroundColor">@color/colorPrimary</item>
    </style>
</resources>